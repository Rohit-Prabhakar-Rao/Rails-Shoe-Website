<section class="banner-area">
		<div class="container">
			<div class="row fullscreen align-items-center justify-content-start">
				<div class="col-lg-12">
					<div class="active-banner-slider owl-carousel">
						<!-- single-slide -->
						<div class="row single-slide align-items-center d-flex">
							<div class="col-lg-5 col-md-6">
								<div class="banner-content">
                  <div class="form-container">
                    <% if session[:admin_logged_in] %>
    <a href="/admin/logout"> Admin Logout</a> 
  <% else %>
      <a href="/admin/login"> Admin Login</a> 
  <% end %>
  <p id="notice"><%= notice %></p>
                    <h3>Store</h3>
                    <br>
                    <%= form_with(model: store) do |form| %>
  <% if store.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(store.errors.count, "error") %> prohibited this store from being saved:</h2>

      <ul>
        <% store.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :color %><br>
    <%= form.text_field :color %>
  </div>

  <div class="field">
    <%= form.label :brand %><br>
    <%= form.text_field :brand %>
  </div>

  <div class="field">
    <%= form.label :size %><br>
    <%= form.text_field :size %>
  </div>

  <div class="field">
    <%= form.label :desc %><br>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :price %><br>
    <%= form.text_field :price %>
  </div>

  <div class="field">
   <%= form.label :image %><br>
   <%= form.file_field :store_image %>
 </div>

  <div class="actions">
    <br>
    <%= form.submit %><br><br>
    <%= link_to 'Back', stores_path %>
  </div>
  
<% end %>
                </div>
								</div>
							</div>
							<div class="col-lg-7">
								<div class="banner-img">
									<img class="img-fluid" src="/assets/banner/banner-img.png" alt="">
								</div>
							</div>
						</div>
            
						<!-- single-slide -->
						



